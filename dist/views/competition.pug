html 
    head 
        title OAuth2/OpenID login demo
        a(href='/', title='Home') Home   
        style 
            include ../../public/style.css
    body
        h1 Table of competition

        .grid-container
        div

        each comp in comps
            h2 #{comp.name}
            table 
                tr
                    td Teams: 
                    td Wins 
                    if comp.comptype == 1 
                        td Draws
                    td Losess
                each team in teams
                    if team.id === comp.id
                        tr
                            td #{team.name}
                            td #{team.win}
                            
                            if comp.comptype === 1 
                                td #{team.draw}
                            td #{team.lose}
            if comp.email==email
                form( action=`/editCompetition/id=${comp.id}` method="POST")
                    button(type="submit") Edit 
            else 
                button(disabled) Edit 
                            

        
            